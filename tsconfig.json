{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleDetection": "force",
    "resolvePackageJsonExports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
